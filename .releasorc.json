{
    "branches": ["main"],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/npm",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "node scripts/update-version.js ${nextRelease.version} && npm run build && mkdir -p release && streamdeck pack se.oscarb.pomodoro.sdPlugin --out release"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    { "path": "release/*.streamDeckPlugin", "label": "Stream Deck Plugin" }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["package.json", "package-lock.json", "se.oscarb.pomodoro.sdPlugin/manifest.json"],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}
